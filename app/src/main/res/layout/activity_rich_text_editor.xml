<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rich_text_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sahilpaudel.app.suggme.RichTextEditor">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scrollbarFadeDuration="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/action_undo"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:background="@null"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                android:src="@drawable/undo"
                android:layout_marginLeft="10dp"/>

            <ImageButton
                android:id="@+id/action_redo"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:background="@null"
                android:scaleType="fitXY"
                android:contentDescription="@null"
                android:src="@drawable/redo"
                android:layout_marginLeft="10dp"/>

            <ImageButton
                android:id="@+id/action_bold"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/bold"/>

            <ImageButton
                android:id="@+id/action_italic"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/italic"/>

            <ImageButton
                android:id="@+id/action_underline"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:background="@null"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/underline"/>

            <ImageButton
                android:id="@+id/action_align_left"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:contentDescription="@null"
                android:src="@drawable/justify_left"
                />

            <ImageButton
                android:id="@+id/action_align_center"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/justify_center"/>

            <ImageButton
                android:id="@+id/action_align_right"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/justify_right"/>

            <ImageButton
                android:id="@+id/action_insert_bullets"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/bullets"
                />

            <ImageButton
                android:id="@+id/action_insert_numbers"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/numbers"
                />

            <ImageButton
                android:id="@+id/action_blockquote"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/blackquote"/>

            <ImageButton
                android:id="@+id/action_insert_image"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/insert_image"/>

            <ImageButton
                android:id="@+id/action_insert_link"
                android:layout_width="@dimen/rich_width"
                android:layout_height="@dimen/rich_height"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_marginLeft="10dp"
                android:contentDescription="@null"
                android:src="@drawable/insert_link"/>
        </LinearLayout>
    </HorizontalScrollView>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>

</LinearLayout>

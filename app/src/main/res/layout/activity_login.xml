<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_all_pages">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/background_all_pages"
        android:id="@+id/relative1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sugmelogo"
            android:layout_centerInParent="true"

            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative2"
            android:layout_below="@+id/relative1"
            android:padding="10dp"
            android:background="@drawable/rounded_up"
            >
        <EditText

            android:hint="@string/email"
            android:id="@+id/et_userName"
            android:inputType="textEmailAddress"
            android:maxLength="35"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/roundedbutton"
            android:drawableLeft="@drawable/user"
            android:padding="12dp"
            android:maxLines="1"
            android:drawablePadding="35dp"
            />

        <EditText
            android:hint="Password"
            android:id="@+id/et_password"
            android:inputType="textPassword"
            android:textColor="#F2FFFA"
            android:layout_below="@+id/et_userName"
            android:maxLength="35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLines="1"
            android:drawableLeft="@drawable/password"
            android:drawablePadding="35dp"
            android:padding="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"/>

        <Button
            android:id="@+id/login"
            android:layout_below="@+id/et_password"
            android:text="LOGIN"
            android:maxLength="35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLines="1"
            android:drawablePadding="35dp"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedfields"/>

            <TextView
                android:id="@+id/ortext"
                android:layout_marginTop="10dp"
                android:layout_below="@id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"/>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/bt_facebook"
            android:layout_width="match_parent"
            android:layout_below="@id/ortext"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/bt_google"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/bt_facebook"
            />
        </RelativeLayout>


</RelativeLayout>
